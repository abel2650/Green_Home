@page
@model Green_home.Pages.KontaktOsModel
@{
    Layout = null;
    ViewData["Title"] = "Kontakt os";
}

@using Green_home.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Green_home.Model

@{
    // Kontroller om en admin er logget ind
    Admin admin = null!;
    try
    {
        admin = SessionHelper.Get<Admin>(admin, HttpContext);
    }
    catch
    {
        // Håndter fejlen hvis der ikke er nogen admin-session
    }
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Green Home</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Green_home.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/Images/Skærmbillede 2024-05-17 kl. 16.07.21.png" alt="Green Home Logo" width="65px">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Green_Home">Green Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Om_os">Om os</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/EjendommeSite">Ejendomme</a>
                            </li>
                            @if (admin != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/CreateEjendomme">Tilføj Ejendom</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/DeleteEjendom">Slet Ejendomme</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Login">Log ud</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="hero-section text-center">
            <h1 class="display-4">Kontakt os</h1>

        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="Images/GenderNeutral Placeholder Photo.png" alt="Card image">
                        <div class="card-body">
                            <h4 class="card-title">Rebin</h4>
                            <p class="card-text">Rådgiver</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="Images/GenderNeutral Placeholder Photo.png" alt="Card image">
                        <div class="card-body">
                            <h4 class="card-title">Mathias</h4>
                            <p class="card-text">Founder af Green Home</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="Images/GenderNeutral Placeholder Photo.png" alt="Card image">
                        <div class="card-body">
                            <h4 class="card-title">Marcus</h4>
                            <p class="card-text">CO-Founder af Green Home og IT-Supporter</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </body>
</html>