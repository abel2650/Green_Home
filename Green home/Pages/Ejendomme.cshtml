@page
@model Green_home.Pages.Shared.Ejendomme

@{
    Layout = null;
    ViewData["Title"] = "Ejendomme";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Green home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Green_home.styles.css" asp-append-version="true" />
</head>
<body>
<div>
    

    <form method="post">
        <button type="submit" asp-route-sortorder="ByID">Sorter efter ID</button>
        <button type="submit" asp-route-sortorder="ByPris">Sorter efter pris</button>
        <button type="submit" asp-route-sortorder="ByKvm">Sorter efter kvm</button>
        <button type="submit" asp-route-sortorder="ByEnergimærke">Sorter efter energimærke</button>
       
    </form>


    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Pris</th>
            <th>Kvm</th>
            <th>Energimærke</th>
            <th>By</th>
         
        </tr>
        </thead>
        <tbody>
        @foreach (var ejendom in Model.Ejedomme)
        {
            <tr>
                <td>@ejendom.Id</td>
                <td>@ejendom.Pris</td>
                <td>@ejendom.Kvm</td>
                <td>@ejendom.Energimærke</td>
                <td>@ejendom.By_id</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>